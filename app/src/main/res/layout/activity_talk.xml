<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="inu.capstone.duo.seetalking.Message.TalkActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/talkActivity_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_above="@id/btn_send"/>

    <EditText
        android:id="@+id/talkActivity_editText"
        android:inputType="textMultiLine"
        android:minLines="1"
        android:maxLines="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/btn_send"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>

    <Button
        android:id="@+id/btn_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND"
        android:layout_toLeftOf="@+id/btn_voiceRecord"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/btn_voiceRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_start"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>