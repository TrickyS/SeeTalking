<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="inu.capstone.duo.seetalking.TrainingActivity">

    <SurfaceView
        android:id="@+id/surfaceView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/btn_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="107dp"
        android:layout_marginEnd="51dp"
        android:text="@string/str_camera" />

    <Button
        android:id="@+id/btn_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_camera"
        android:layout_alignEnd="@+id/btn_camera"
        android:layout_marginBottom="13dp"
        android:text="@string/str_start" />

    <Button
        android:id="@+id/btn_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_camera"
        android:text="test"/>

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_camera"
        android:layout_marginEnd="192dp"
        android:layout_toStartOf="@+id/btn_camera"
        android:singleLine="false"
        android:textSize="20sp"
        android:textColor="#ffffffff"/>

    <EditText
        android:id="@+id/input_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_result"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        android:visibility="invisible" />


</RelativeLayout>
